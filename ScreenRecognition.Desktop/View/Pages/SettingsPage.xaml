<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ScreenRecognition.Desktop.View.Pages"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      xmlns:ViewModel="clr-namespace:ScreenRecognition.Desktop.ViewModel"
      x:Class="ScreenRecognition.Desktop.View.Pages.SettingsPage"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="Настройки">
    <Page.DataContext>
        <ViewModel:SettingsPageViewModel />
    </Page.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    x:Name="DisconnectedPanel"
                    Visibility="{Binding DisconnectedPanelVisibility}">
            <TextBlock HorizontalAlignment="Center"
                       FontSize="20"
                       Margin="5"
                       TextWrapping="Wrap"
                       Foreground="DarkRed">
                <Run Text="Настройки профиля недоступны." />
                <LineBreak />
                <Run Text="Для получения полного доступа к программе, Вам необходимо войти в аккаунт."/>
            </TextBlock>
        </StackPanel>
        <hc:ScrollViewer Grid.Column="0"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         Visibility="{Binding ProfilePanelVisibility}">
            <StackPanel Orientation="Vertical"
                        Grid.Column="0"
                        x:Name="profilePanel">
                <TextBlock Text="Мой профиль"
                           HorizontalAlignment="Center"
                           FontSize="20" />
                <StackPanel Orientation="Vertical"
                            Margin="0 5 0 0">
                    <TextBlock Text="Обо мне"
                               HorizontalAlignment="Center"
                               FontSize="20" />
                    <DockPanel LastChildFill="True">
                        <TextBlock DockPanel.Dock="Left"
                                   Text="Имя"
                                   VerticalAlignment="Center"
                                   Margin="5" />
                        <hc:TextBox DockPanel.Dock="Right"
                                    Width="auto"
                                    Margin="5"
                                    x:Name="userFirstname"
                                    hc:InfoElement.Placeholder="Имя"
                                    HorizontalContentAlignment="Left"
                                    VerticalContentAlignment="Center" />
                    </DockPanel>
                    <DockPanel LastChildFill="True">
                        <TextBlock DockPanel.Dock="Left"
                                   Text="Фамилия"
                                   VerticalAlignment="Center"
                                   Margin="5" />
                        <hc:TextBox DockPanel.Dock="Right"
                                    Width="auto"
                                    Margin="5"
                                    x:Name="userLastname"
                                    hc:InfoElement.Placeholder="Фамилия"
                                    HorizontalContentAlignment="Left"
                                    VerticalContentAlignment="Center" />
                    </DockPanel>
                    <DockPanel LastChildFill="False">
                        <TextBlock DockPanel.Dock="Left"
                                   Text="Дата рождения"
                                   VerticalAlignment="Center"
                                   Margin="5" />
                        <hc:DatePicker DockPanel.Dock="Right"
                                       Width="auto"
                                       Margin="5"
                                       hc:InfoElement.Placeholder="Дата рождения"
                                       x:Name="userBirthday"
                                       HorizontalContentAlignment="Left"
                                       VerticalContentAlignment="Center" />
                    </DockPanel>
                    <DockPanel LastChildFill="False">
                        <TextBlock DockPanel.Dock="Left"
                                   Text="Страна проживания"
                                   VerticalAlignment="Center"
                                   Margin="5" />
                        <hc:ComboBox DockPanel.Dock="Right"
                                     Width="auto"
                                     Margin="5"
                                     x:Name="userCountry"
                                     hc:InfoElement.Placeholder="Страна"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center" />
                    </DockPanel>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Аккаунт"
                               HorizontalAlignment="Center"
                               FontSize="20" />
                    <DockPanel LastChildFill="True">
                        <TextBlock DockPanel.Dock="Left"
                                   Text="Роль"
                                   VerticalAlignment="Center"
                                   Margin="5" />
                        <hc:TextBox DockPanel.Dock="Right"
                                    Width="auto"
                                    IsReadOnly="True"
                                    hc:InfoElement.Placeholder="Роль"
                                    Margin="5"
                                    x:Name="userRole"
                                    HorizontalContentAlignment="Left"
                                    VerticalContentAlignment="Center" />
                    </DockPanel>
                    <DockPanel LastChildFill="True">
                        <TextBlock DockPanel.Dock="Left"
                                   Text="Логин"
                                   VerticalAlignment="Center"
                                   Margin="5" />
                        <hc:TextBox DockPanel.Dock="Right"
                                    Width="auto"
                                    hc:InfoElement.Placeholder="Логин"
                                    Margin="5"
                                    x:Name="userLogin"
                                    HorizontalContentAlignment="Left"
                                    VerticalContentAlignment="Center" />
                    </DockPanel>
                    <DockPanel LastChildFill="True">
                        <TextBlock DockPanel.Dock="Left"
                                   Text="Пароль"
                                   VerticalAlignment="Center"
                                   Margin="5" />
                        <hc:PasswordBox DockPanel.Dock="Right"
                                        Width="auto"
                                        Margin="5"
                                        hc:InfoElement.Placeholder="Пароль"
                                        x:Name="userPassword"
                                        HorizontalContentAlignment="Left"
                                        VerticalContentAlignment="Center" />
                    </DockPanel>
                    <DockPanel LastChildFill="True">
                        <TextBlock DockPanel.Dock="Left"
                                   Text="Никнейм"
                                   VerticalAlignment="Center"
                                   Margin="5" />
                        <hc:TextBox DockPanel.Dock="Right"
                                    Width="auto"
                                    Margin="5"
                                    hc:InfoElement.Placeholder="Никнейм"
                                    x:Name="userNickname"
                                    HorizontalContentAlignment="Left"
                                    VerticalContentAlignment="Center" />
                    </DockPanel>
                    <DockPanel LastChildFill="True">
                        <TextBlock DockPanel.Dock="Left"
                                   Text="Электронная почта"
                                   VerticalAlignment="Center"
                                   Margin="5" />
                        <hc:TextBox DockPanel.Dock="Right"
                                    Width="auto"
                                    Margin="5"
                                    hc:InfoElement.Placeholder="Электронная почта"
                                    x:Name="userEmail"
                                    HorizontalContentAlignment="Left"
                                    VerticalContentAlignment="Center" />
                    </DockPanel>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Профили настроек"
                               HorizontalAlignment="Center"
                               FontSize="20" />
                    <DockPanel LastChildFill="False">
                        <hc:ComboBox DockPanel.Dock="Right"
                                     Width="auto"
                                     Margin="5"
                                     hc:InfoElement.Placeholder="Профили"
                                     x:Name="settingsProfileList"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center" />
                        <Button DockPanel.Dock="Left"
                                Width="auto"
                                Content="Загрузить профиль"
                                Margin="5"
                                HorizontalContentAlignment="Right"
                                VerticalContentAlignment="Center" />
                    </DockPanel>
                    <DockPanel LastChildFill="False">
                        <hc:TextBox DockPanel.Dock="Right"
                                    Width="auto"
                                    Margin="5"
                                    hc:InfoElement.Placeholder="Название профиля"
                                    x:Name="settingsProfileName"
                                    HorizontalContentAlignment="Left"
                                    VerticalContentAlignment="Center" />
                        <Button DockPanel.Dock="Left"
                                Width="auto"
                                Content="Сохранить профиль"
                                Margin="5"
                                HorizontalContentAlignment="Right"
                                VerticalContentAlignment="Center" />
                    </DockPanel>
                </StackPanel>
            </StackPanel>
        </hc:ScrollViewer>
        <hc:ScrollViewer Grid.Column="1"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical"
                        x:Name="settingsPanel"
                        Grid.Column="1">
                <TextBlock Text="Настройки программы"
                           HorizontalAlignment="Center"
                           FontSize="20" />
                <StackPanel Orientation="Vertical"
                            Margin="0 5 0 0">
                    <TextBlock Text="Переводчик"
                               HorizontalAlignment="Center"
                               FontSize="20" />
                    <DockPanel LastChildFill="False">
                        <TextBlock DockPanel.Dock="Left"
                                   Text="Выберите язык, на который будет переведён текст"
                                   VerticalAlignment="Center"
                                   Margin="5" />
                        <hc:ComboBox DockPanel.Dock="Right"
                                     Width="auto"
                                     Margin="5"
                                     hc:InfoElement.Placeholder="Язык"
                                     x:Name="outputLanguage"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center" />
                    </DockPanel>
                    <DockPanel LastChildFill="False">
                        <DockPanel DockPanel.Dock="Top"
                                   LastChildFill="False">
                            <TextBlock DockPanel.Dock="Left"
                                       Text="Выберите систему перевода"
                                       VerticalAlignment="Center"
                                       Margin="5" />
                            <hc:ComboBox DockPanel.Dock="Right"
                                         Width="auto"
                                         Margin="5"
                                         hc:InfoElement.Placeholder="Переводчик"
                                         x:Name="translator"
                                         HorizontalContentAlignment="Center"
                                         VerticalContentAlignment="Center" />
                        </DockPanel>
                        <DockPanel DockPanel.Dock="Bottom"
                                   LastChildFill="False">
                            <TextBlock DockPanel.Dock="Left"
                                       Text="Введите Api Key (если есть)"
                                       VerticalAlignment="Center"
                                       Margin="5" />
                            <hc:TextBox DockPanel.Dock="Left"
                                        Margin="5"
                                        hc:InfoElement.Placeholder="Api Key"
                                        x:Name="apiKey"
                                        Width="250"
                                        HorizontalContentAlignment="Left"
                                        VerticalContentAlignment="Center" />
                            <Button DockPanel.Dock="Right"
                                    Margin="5"
                                    BorderBrush="Transparent"
                                    Background="Transparent"
                                    hc:IconElement.Geometry="{StaticResource EyeOpenGeometry}" />
                        </DockPanel>
                    </DockPanel>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="OCR"
                               HorizontalAlignment="Center"
                               FontSize="20" />
                    <DockPanel LastChildFill="False">
                        <TextBlock DockPanel.Dock="Left"
                                   Text="Выберите язык распознавания"
                                   VerticalAlignment="Center"
                                   Margin="5" />
                        <hc:ComboBox DockPanel.Dock="Right"
                                     Width="auto"
                                     Margin="5"
                                     x:Name="inputLanguage"
                                     hc:InfoElement.Placeholder="Язык"
                                     HorizontalContentAlignment="Left"
                                     VerticalContentAlignment="Center" />
                    </DockPanel>
                    <DockPanel LastChildFill="False">
                        <TextBlock DockPanel.Dock="Left"
                                   Text="Выберите систему распознавания текста"
                                   VerticalAlignment="Center"
                                   Margin="5" />
                        <hc:ComboBox DockPanel.Dock="Right"
                                     Width="auto"
                                     Margin="5"
                                     x:Name="ocr"
                                     hc:InfoElement.Placeholder="OCR"
                                     HorizontalContentAlignment="Left"
                                     VerticalContentAlignment="Center" />
                    </DockPanel>
                    <DockPanel LastChildFill="False"
                               IsEnabled="False"
                               Visibility="Collapsed">
                        <TextBlock DockPanel.Dock="Left"
                                   Text="Включить систему улучшенного распознавания (coming soon)"
                                   VerticalAlignment="Center"
                                   Margin="5" />
                        <CheckBox DockPanel.Dock="Right"
                                  Width="auto"
                                  Margin="5"
                                  x:Name="t9Status"
                                  HorizontalContentAlignment="Right"
                                  VerticalContentAlignment="Center" />
                    </DockPanel>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Результат"
                               HorizontalAlignment="Center"
                               FontSize="20" />
                    <DockPanel LastChildFill="False">
                    <TextBlock DockPanel.Dock="Left"
                               Text="Введите Hex код цвета"
                               VerticalAlignment="Center"
                               Margin="5" />
                        <hc:TextBox DockPanel.Dock="Left"
                                Margin="5"
                                hc:InfoElement.Placeholder="Hex код"
                                x:Name="resultColor"
                                Width="300"
                                HorizontalContentAlignment="Left"
                                VerticalContentAlignment="Center" />
                    </DockPanel>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Привязка клавиш"
                               HorizontalAlignment="Center"
                               FontSize="20" />
                    <DockPanel LastChildFill="False">
                        <TextBlock DockPanel.Dock="Left"
                                   Text="Выделить текст на экране"
                                   VerticalAlignment="Center"
                                   Margin="5" />
                        <hc:ComboBox DockPanel.Dock="Right"
                                     Width="auto"
                                     x:Name="hotkeyKey"
                                     Margin="5"
                                     hc:InfoElement.Placeholder="Клавиша"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center" />
                        <hc:ComboBox DockPanel.Dock="Right"
                                     Width="auto"
                                     x:Name="hotkeyModifier"
                                     Margin="5"
                                     hc:InfoElement.Placeholder="Модификатор"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center" />
                    </DockPanel>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Прочее"
                               HorizontalAlignment="Center"
                               FontSize="20" />
                    <DockPanel LastChildFill="False">
                        <TextBlock DockPanel.Dock="Left"
                                   Text="Автозапуск вместе с системой"
                                   VerticalAlignment="Center"
                                   Margin="5" />
                        <CheckBox DockPanel.Dock="Right"
                                  Width="auto"
                                  Margin="5"
                                  x:Name="autostartWithSystem"
                                  HorizontalContentAlignment="Right"
                                  VerticalContentAlignment="Center" />
                    </DockPanel>
                    <DockPanel LastChildFill="False">
                        <TextBlock DockPanel.Dock="Left"
                                   Text="Сворачивать в трей, вместо закрытия"
                                   VerticalAlignment="Center"
                                   Margin="5" />
                        <CheckBox DockPanel.Dock="Right"
                                  Width="auto"
                                  Margin="5"
                                  x:Name="toTrayIcon"
                                  HorizontalContentAlignment="Right"
                                  VerticalContentAlignment="Center" />
                    </DockPanel>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Профиль"
                                   HorizontalAlignment="Center"
                                   FontSize="20" />
                        <DockPanel LastChildFill="False">
                            <TextBlock DockPanel.Dock="Left"
                                       Text="Название профиля"
                                       VerticalAlignment="Center"
                                       Margin="5" />
                            <hc:TextBox DockPanel.Dock="Left"
                                        Margin="5"
                                        hc:InfoElement.Placeholder="Название профиля"
                                        x:Name="profileName"
                                        Width="250"
                                        HorizontalContentAlignment="Left"
                                        VerticalContentAlignment="Center" />
                            <Button Content="Сохранить"
                                    Margin="5"
                                    DockPanel.Dock="Right"
                                    BorderBrush="#FF4862F1" />
                        </DockPanel>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </hc:ScrollViewer>
    </Grid>
</Page>