<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ScreenRecognition.Desktop.View.Pages"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      xmlns:ViewModel="clr-namespace:ScreenRecognition.Desktop.ViewModel"
      x:Class="ScreenRecognition.Desktop.View.Pages.SettingsPage"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="Настройки">
    <Page.DataContext>
        <ViewModel:SettingsPageViewModel />
    </Page.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical"
                    x:Name="mainPanel">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Перевод текста"
                           HorizontalAlignment="Center"
                           FontSize="20" />
                <DockPanel LastChildFill="False">
                    <TextBlock DockPanel.Dock="Left"
                               Text="Выберите язык"
                               VerticalAlignment="Center"
                               Margin="5" />
                    <ComboBox DockPanel.Dock="Right"
                              Width="auto"
                              Margin="5"
                              HorizontalContentAlignment="Right"
                              VerticalContentAlignment="Center" />
                </DockPanel>
                <DockPanel LastChildFill="False">
                    <DockPanel DockPanel.Dock="Top"
                               LastChildFill="False">
                        <TextBlock DockPanel.Dock="Left"
                                   Text="Выберите переводчик"
                                   VerticalAlignment="Center"
                                   Margin="5" />
                        <ComboBox DockPanel.Dock="Right"
                                  Width="auto"
                                  Margin="5"
                                  HorizontalContentAlignment="Right"
                                  VerticalContentAlignment="Center" />
                    </DockPanel>
                    <DockPanel DockPanel.Dock="Bottom"
                               LastChildFill="True">
                        <TextBlock DockPanel.Dock="Left"
                                   Text="Введите Api Key (если есть)"
                                   VerticalAlignment="Center"
                                   Margin="5" />
                        <TextBox DockPanel.Dock="Right"
                                 Margin="5"
                                 HorizontalContentAlignment="Left"
                                 VerticalContentAlignment="Center" />
                    </DockPanel>
                </DockPanel>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="OCR"
                           HorizontalAlignment="Center"
                           FontSize="20" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
