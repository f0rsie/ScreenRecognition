<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenRecognition.Desktop.View.Windows"
        xmlns:ViewModel="clr-namespace:ScreenRecognition.Desktop.ViewModel"
        x:Class="ScreenRecognition.Desktop.View.Windows.MainWindow"
        mc:Ignorable="d"
        Title="Настройки"
        Height="450"
        Width="800"
        Closing="Window_Closing">
    <Window.DataContext>
        <ViewModel:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230*" />
            <ColumnDefinition Width="180*" />
            <ColumnDefinition Width="311*" />
            <ColumnDefinition Width="79*" />
        </Grid.ColumnDefinitions>
        <TextBlock Text="{Binding Result}"
                   TextWrapping="Wrap" />
        <Frame Grid.Column="1" x:Name="f"/>
        <Button Grid.Column="2"
                Click="Button_Click"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"/>
        <Button Grid.Column="3"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Click="ButtonScreenshot_Click"/>
    </Grid>
</Window>
